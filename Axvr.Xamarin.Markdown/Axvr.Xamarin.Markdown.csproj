<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <PropertyGroup>
    <Version>0.2.1</Version>
    <Authors>Alex Vear</Authors>
    <PackageId>MdView</PackageId>
    <PackageIconUrl></PackageIconUrl>
    <Title>MdView for Xamarin.Forms</Title>
    <Summary>The flexible Markdown control for Xamarin.Forms.</Summary>
    <Description>A highly customisable Markdown control for Xamarin.Forms.</Description>
    <Copyright>Copyright © 2020 Numerous Technology, 2020 Alex Vear, 2017 Aloïs Deniel</Copyright>
    <IsPackable>true</IsPackable>
    <RepositoryUrl>https://github.com/axvr/MdView</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>Xamarin;iOS;Android;md;Markdown</PackageTags>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Xamarin.Essentials" Version="1.3.1" />
    <PackageReference Include="Xamarin.Forms" Version="4.4.0.991537" />
    <PackageReference Include="Markdig" Version="0.18.1" />
  </ItemGroup>

</Project>
